//wap to find max and min element in an array
#include <stdio.h>

int main() {
   int n;
   printf("enter size of array");
   scanf("%d",&n);
   int arr[n];
   
   printf("enter element");
   for (int i=0; i<n; i++)
   {
       
       scanf("%d",&arr[i]);
   }
   
   int max=0, min=0;
   for (int i=0; i<n; i++)
   {
       if (max>arr[i])
       {
           max=arr[i];
       }
       if (min<arr[i])
       {
           min=arr[i];
       }
   }
   printf("max element of array is:%d\n",max);
   printf("min element of array is:%d\n",min);

    return 0;
}


output:
enter size of array4
enter element45 21 
85
6
max element of array is:0
min element of array is:85


