//star pattern hollow hourglass
#include <stdio.h>
int main() {
    int n;
    printf("enter rows: ");
    scanf("%d",&n);
    for (int i=n; i>=1; i--) {
        for (int k=1; k<=n-i; k++) {
            printf(" ");
        }
        for (int j=1; j<=i; j++) {
            if (j==1 || j==i || i==n)
                printf("* ");
            else
                printf("  ");
        }
        printf("\n");
    }
    for (int i=2; i<=n; i++) {  
        for (int k=1; k<=n-i; k++) {
            printf(" ");
        }
        for (int j=1; j<=i; j++) {
            if (j==1 || j==i || i==n)   
                printf("* ");
            else
                printf("  ");
        }
        printf("\n");
    }

    return 0;
}
