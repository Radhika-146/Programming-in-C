//code for pascal's triangle
#include <stdio.h>
int main() {
    int n;
    printf("enter rows: ");
    scanf("%d", &n);
    for (int i = 0; i < n; i++) {   
        // spaces
        for (int k = 1; k <= n - i - 1; k++) {
            printf("  ");
        }
        int val = 1; 
        for (int j = 0; j <= i; j++) {                
            printf("%4d", val);
            val = val * (i - j) / (j + 1); // formula for next value in row
        }
        printf("\n");
    }
    return 0;
}
